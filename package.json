    "@actions/core": "1.6.0",
    "@actions/github": "5.0.0"
  },
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "@typescript-eslint/parser": "5.4.0",
    "@vercel/ncc": "0.32.0",
    "eslint": "8.2.0",
    "eslint-plugin-github": "4.3.5",
    "eslint-plugin-jest": "25.2.4",
    "jest": "27.3.1",
    "jest-circus": "27.3.1",
    "js-yaml": "4.1.0",
